{
  "variables": {
    "gcloud_project": "",
    "gcloud_account_file": "",
    "output_image_name": "",
    "es_snapshot_account_file": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `gcloud_account_file`}}",
      "project_id": "{{user `gcloud_project`}}",
      "source_image": "ubuntu-2004-focal-v20211202",
      "image_name": "{{user `output_image_name`}}-{{timestamp}}",
      "zone": "europe-west1-b",
      "ssh_username": "packer"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "/usr/bin/cloud-init status --wait"
      ]
    },
    {
      "type": "file",
      "source": "{{ user `es_snapshot_account_file` }}",
      "destination": "/tmp/es-snapshot-account-file.json"
    },
    {
      "type": "shell",
      "scripts": [
        "./base/install-packages.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
	"rm /tmp/es-snapshot-account-file.json"
      ]
    }
  ]
}
